{{# partial "titulo"}}
    <title>Rescate de Patitas - Mascota Encontrada</title>
{{/partial}}

{{# partial "main"}}
    <div class="container mt-5 mb-5">
        <h1 class="text-center mb-4">Completá los datos de la mascota encontrada</h1>
        <form class="needs-validation" novalidate method="POST" action="/mascotasEncontradasSinChapita">
            <div class="container">
                <div class="col-md-12 mt-5">
                    <h5 class="fw-bold"> Mascota encontrada </h5>
                </div>
                <div class="row g-3">
                    <div class="col-sm-7">
                        <label for="lugarEncuentro" class="col-form-label" >Lugar de encuentro</label>
                        <input type="text" class="form-control" placeholder="Lugar de encuentro" aria-label="City" name="lugar" required>
                    </div>
                    <div class="col-sm">
                        <label for="fechaEncuentro" class="col-form-label" >Fecha de encuentro</label>
                        <input type="date" class="form-control" placeholder="Fecha de encuentro" aria-label="State" name="fechaEncuentro" required>
                    </div>
                </div>
                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-4">
                        <label for="tipoMascota" class="col-form-label" >Tipo</label>
                        <select id="tipoMascota" class="form-select" name="tipo" required>
                            <option selected disabled value="">Tipo de mascota...</option>
                            <option>Gato</option>
                            <option>Perro</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="sexoMascota" class="col-form-label" >Sexo</label>
                        <select id="sexoMascota" class="form-select" name="sexo" required>
                            <option selected disabled value="">Sexo...</option>
                            <option>Macho</option>
                            <option>Hembra</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="tamanioMascota" class="col-form-label" >Tamaño</label>
                        <select id="tamanioMascota" class="form-select" name="tamanio" required>
                            <option selected disabled value="">Tamaño...</option>
                            <option>Pequeño</option>
                            <option>Mediano</option>
                            <option>Grande</option>
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2 mb-2">
                {{#each caracteristicasIdeales}}
                    <div class="col-md-4">
                        <label class="col-form-label">{{descripcion}}</label>
                        {{#if valoresPosibles}}
                        <select name ="{{descripcion}}" class="form-select" required>
                            <option selected disabled value="">Seleccione una...</option>
                            {{#each valoresPosibles}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                        {{else}}
                        <input type="text" class="form-control" placeholder="{{descripcion}}" name="{{descripcion}}" required>
                        {{/if}}
                    </div>
                {{/each}}
                </div>
                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-12">
                        <label for="descripcionMascota" class="col-form-label">Descripcion</label>
                        <textarea class="form-control" id="descripcionMascota" rows="3" placeholder="Descripción sobre la mascota al momento del encuentro y cualquier información relevante" name="descripcionMascota" required></textarea>
                    </div>
                </div>
                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-12">
                        <label for="fotoMascota" class="col-form-label">Foto</label>
                        <input class="form-control" type="file" id="mascotaFoto" placeholder="Ingrese una foto de la mascota" name="foto">
                    </div>
                </div>

                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-12">
                        <h5 class="fw-bold"> Rescatista </h5>
                    </div>
                    <div class="col-md-4">
                        <label for="apellidoRescatista" class="col-form-label">Apellido</label>
                        <input type="text" class="form-control" placeholder="Apellido" aria-label="Apellido" name="apellido" required>
                    </div>
                    <div class="col-md-4">
                        <label for="nombreRescatista" class="col-form-label">Nombre</label>
                        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" name="nombre" required>
                    </div>
                    <div class="col-md-4">
                        <label for="emailRescatista" class="col-form-label">Email</label>
                        <input type="email" class="form-control" placeholder="mail@ejemplo.com" aria-label="Email" name="email" required>
                    </div>
                </div>
                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-4">
                        <label for="personafecha" class="col-form-label">Fecha de nacimiento</label>
                        <input id="personafecha" type="date" class="form-control" aria-label="Fecha de nacimiento" name="fechaNacimiento" required>
                    </div>
                    <div class="col-md-4">
                        <label for="tipodni" class="col-form-label">Tipo de documento</label>
                        <select id="tipodocumento" class="form-select" name="tipoDocumento" required>
                            <option selected value="DNI">DNI</option>
                            <option value="LC">LC</option>
                            <option value="LR">LR</option>
                            <option value="PASAPORTE">Pasaporte</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="numerodocumento" class="col-form-label">Número de documento</label>
                        <input id="numerodocumento" name="numeroDocumento" type="number" class="form-control" placeholder="23456123" aria-label="Número de documento" min="1" max="99999999" required>
                    </div>
                </div>

                <div class="row g-3 mt-2 mb-2">
                    <div class="col-md-12">
                        <h6 class= "fw-bold"> Datos de Contacto </h6>
                    </div>
                    <div class="col-md-3">
                        <label for="apellidoContacto1" class="col-form-label">Apellido</label>
                        <input type="text" class="form-control" placeholder="Apellido" aria-label="Apellido" name="apellidoContacto1" required>
                    </div>
                    <div class="col-md-3">
                        <label for="nombreContacto1" class="col-form-label">Nombre</label>
                        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" name="nombreContacto1" required>
                    </div>
                    <div class="col-md-3">
                        <label for="emailContacto1" class="col-form-label">Email</label>
                        <input type="email" class="form-control" placeholder="mail@ejemplo.com" aria-label="Email" name="emailContacto1" required>
                    </div>
                    <div class="col-md-3">
                        <label for="telefonoContacto1" class="col-form-label">Telefono</label>
                        <input type="phone" class="form-control" placeholder="1166889977" aria-label="Phone" name="telefonoContacto1" maxlength="10" required>
                    </div>
                </div>
                <div class="mt-3 d-flex flex-row-reverse">
                    <input class="btn btn-success" id="add_Contacto()" onClick="addContacto()" value="+"/>
                    <label class="col-form-label me-3">Añadir contacto</label>
                </div>
                <div id="contactos"> </div>
                <div class="row g-3 mt-2 mb-2 justify-content-end">
                    <input class="btn btn-danger btn-lg" type="submit" value="Siguiente"></input>
                    <a href="/" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
{{/partial}}

{{> layout.html.hbs }}
